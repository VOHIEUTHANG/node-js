<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node JS</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../../css/style.css" />

    <script
      src="https://kit.fontawesome.com/4a9b76c21b.js"
      crossorigin="anonymous"
    ></script>

    <script src="../../js/header.js" defer></script>
  </head>
  <body style="background-color: rgba(0, 0, 0, 0.05)">
    <%- include('layout/header') -%>
    <main>
      <div class="container">
        <form action="/user/update" method="post">
          <div class="main-container mt-4">
            <h2 class="text-center mb-4" style="color: #555;">UPDATE USER</h2>
            <div class="row border  bg-white p-4 mx-auto w-75" >
              <input class="form-control" value="<%= userInfo.id%>" hidden name="id" >
              <div class="col-md-6 mt-2">
                <label for="inputEmail4" class="form-label">First Name</label>
                <input class="form-control" id="inputEmail4" value="<%= userInfo.firstName%>" name="firstName" >
              </div>
              <div class="col-md-6 mt-2">
                <label for="inputPassword4" class="form-label">Last Name</label>
                <input class="form-control" id="inputPassword4"  name="lastName" value="<%= userInfo.lastName%>">
              </div> 
              <div class="col-12 mt-4">
                <label for="inputAddress" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputAddress" name="email" value="<%= userInfo.email%>">
              </div>
              <div class="col-12 mt-4">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" name="address" value="<%= userInfo.address%>">
              </div>
              <div class="col-auto mt-4">
                <button type="submit" class="btn btn-primary mb-3">Update</button>
              </div>
            </div>
          </div>
        </for>
      </div>
    </main>
  </body>
</html>
