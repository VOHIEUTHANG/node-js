<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node JS</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/style.css" />

    <script
      src="https://kit.fontawesome.com/4a9b76c21b.js"
      crossorigin="anonymous"
    ></script>
    <script src="js/header.js" defer></script>
    <style>
      td,th{
          vertical-align:middle;
      }
  </style>
  </head>
  <body style="background-color: rgba(0, 0, 0, 0.05)">
    <%- include('layout/header') -%>
    <main>
      <div class="container">
        <div class="main-content">
          <h1
            style="
              text-transform: uppercase;
              text-align: center;
              margin:20px 0;
              color: #555;
            "
          >
            List users Table
          </h1>
          <table
            class="table table-light table-hover"
            style="
              box-shadow: 0 0 40px 0px rgba(0, 0, 0, 0.1);
              border-radius: 12px;
              overflow: hidden;
            "
          >
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i = 0;i<userInfo.length;i++) { %>
              <tr>
                <th scope="row"><%=userInfo[i].id  %></th>
                <td><%= userInfo[i].firstName %></td>
                <td><%= userInfo[i].lastName %></td>
                <td><%= userInfo[i].email %></td>
                <td><%= userInfo[i].address %></td>
                <td>
                  <a type="button" class="btn btn-primary" href="/user/detail/<%= userInfo[i].id %>">Detail</a>
                  <a type="button" class="btn btn-success mx-2" href="/user/update/<%= userInfo[i].id %>">Update</a>
                  <form action="/user/delete" method="post" class="mb-0" style="display:inline-block">
                    <input text="text" value="<%= userInfo[i].id %>" name="id" hidden />
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <form action="user/post" method="post">
          <div class="main-container mt-4">
            <h2 class="text-center mb-4" style="color: #555;">CREATE USER</h2>
            <div class="row border  bg-white p-4 mx-auto w-75" >
              <div class="col-md-6">
                <label for="inputEmail4" class="form-label">First Name</label>
                <input class="form-control" id="inputEmail4" name="firstName" >
              </div>
              <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Last Name</label>
                <input class="form-control" id="inputPassword4" name="lastName" >
              </div>
              <div class="col-12 mt-4">
                <label for="inputAddress" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputAddress" name="email">
              </div>
              <div class="col-12 mt-4">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" name="address" >
              </div>
              <div class="col-auto mt-4">
                <button type="submit" class="btn btn-primary mb-3">Submit</button>
              </div>
            </div>
          </div>
        </for>
      </div>
    </main>
  </body>
</html>
